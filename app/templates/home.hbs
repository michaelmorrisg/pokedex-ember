<div class="main">
    <h1>Pokedex</h1>

    <img src="{{pokemon.sprites.front_default}}" />
    <h2>{{pokemon.name}}</h2>
    {{poke-screen display=display}}
    <h3>Abilities</h3>
    <ul>
        {{#each pokemon.abilities as |ability|}}
            <li>{{ability.ability.name}}</li>
        {{/each}}
    </ul>
    {{input value=pokename}}
    <button {{action "getPokemon" pokename}}>Go!</button>

    <button {{action "changeComponent" pokemon.id.type.name}}>Type</button>
</div>
{{outlet}}